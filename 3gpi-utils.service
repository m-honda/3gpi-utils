[Unit]
Description=Initialize 3GPi
Before=network.target
Before=ModemManager.service

[Service]
Type=oneshot
EnvironmentFile=/etc/default/3gpi-utils
ExecStartPre=/usr/lib/3gpi-utils/export.sh
ExecStart=/usr/lib/3gpi-utils/start.sh
ExecStop=/usr/lib/3gpi-utils/stop.sh
ExecStopPost=/usr/lib/3gpi-utils/unexport.sh
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target

